.device-form {
  padding: 20rpx;
}
.device-form .form-header {
  margin-bottom: 30rpx;
}
.device-form .form-header .form-title {
  font-size: 36rpx;
  font-weight: bold;
}
.device-form .form-header .device-info {
  margin-top: 10rpx;
  color: #666;
}
.device-form .process-section {
  margin-bottom: 40rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}
.device-form .process-section .label {
  display: block;
  margin-bottom: 10rpx;
  color: #333;
}
.device-form .process-picker {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 20rpx;
  background-color: #fff;
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
}
.device-form .form-section {
  margin-bottom: 40rpx;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
}
.device-form .form-item {
  margin-bottom: 20rpx;
}
.device-form .form-item .label {
  display: block;
  margin-bottom: 10rpx;
  color: #333;
}
.device-form .form-item input {
  width: 100%;
  height: 70rpx;
  padding: 0 20rpx;
  background-color: #fff;
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
}
.device-form .form-item .picker-text {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 20rpx;
  background-color: #fff;
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
}
.device-form .image-upload .preview-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}
.device-form .image-upload .upload-btn {
  width: 200rpx;
  font-size: 28rpx;
}
.device-form .submit-btn {
  margin-top: 40rpx;
  width: 100%;
}