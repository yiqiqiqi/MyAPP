}
.business-page .content-scroll .tech-advantages .advantages-list .advantage-item .advantage-icon text {
  font-size: 28rpx;
}
.business-page .content-scroll .tech-advantages .advantages-list .advantage-item .advantage-content {
  flex: 1;
}
.business-page .content-scroll .tech-advantages .advantages-list .advantage-item .advantage-content .advantage-title {
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 10rpx;
}
.business-page .content-scroll .tech-advantages .advantages-list .advantage-item .advantage-content .advantage-desc {
  color: rgba(255, 255, 255, 0.7);
