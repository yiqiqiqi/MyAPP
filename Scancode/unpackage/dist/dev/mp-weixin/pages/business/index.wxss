.business-page {
  width: 100vw;
  height: 100vh;
  background: linear-gradient(135deg, #000000 0%, #0a0a0a 50%, #000000 100%);
}
.business-page .custom-navbar {
  height: 88rpx;
  background: rgba(0, 0, 0, 0.8);
  -webkit-backdrop-filter: blur(20px);
          backdrop-filter: blur(20px);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}
.business-page .custom-navbar .nav-back {
  display: flex;
  align-items: center;
  color: #3a8bcd;
  font-size: 28rpx;
}
.business-page .custom-navbar .nav-back .back-icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}
.business-page .custom-navbar .nav-title {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
}
.business-page .custom-navbar .nav-placeholder {
  width: 120rpx;
}
.business-page .content-scroll {
  height: calc(100vh - 88rpx);
}
.business-page .content-scroll .container {
  max-width: 1200rpx;
  margin: 0 auto;
  padding: 0 30rpx;
}
.business-page .content-scroll .business-overview {
  padding: 80rpx 0 60rpx;
  background: radial-gradient(circle at 50% 0%, rgba(59, 130, 246, 0.1) 0%, transparent 50%);
}
.business-page .content-scroll .business-overview .section-header {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}
.business-page .content-scroll .business-overview .section-header .section-line {
  width: 80rpx;
  height: 2rpx;
  background: linear-gradient(90deg, transparent, #3a8bcd, transparent);
  margin: 0 30rpx;
}
.business-page .content-scroll .business-overview .section-header .section-title {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: 600;
}
.business-page .content-scroll .business-overview .overview-text {
  text-align: center;
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  line-height: 1.6;
}
.business-page .content-scroll .business-overview .overview-text .text-highlight {
  background: linear-gradient(135deg, #3a8bcd 0%, #93c5fd 50%, #3a8bcd 100%);
  background-clip: text;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  font-weight: 600;
}
.business-page .content-scroll .business-grid-section {
  padding: 60rpx 0;
}
.business-page .content-scroll .business-grid-section .business-grid {
  display: grid;
  gap: 40rpx;
}
.business-page .content-scroll .business-grid-section .business-grid .business-card {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 40rpx;
  transition: all 0.3s ease;
}
.business-page .content-scroll .business-grid-section .business-grid .business-card:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.08);
}
.business-page .content-scroll .business-grid-section .business-grid .business-card .card-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #3a8bcd 0%, #93c5fd 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}
.business-page .content-scroll .business-grid-section .business-grid .business-card .card-icon text {
  font-size: 36rpx;
}
.business-page .content-scroll .business-grid-section .business-grid .business-card .card-content {
  flex: 1;
}
.business-page .content-scroll .business-grid-section .business-grid .business-card .card-content .card-title {
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  display: block;
  margin-bottom: 10rpx;
}
.business-page .content-scroll .business-grid-section .business-grid .business-card .card-content .card-desc {
  color: rgba(255, 255, 255, 0.7);
  font-size: 26rpx;
  display: block;
  margin-bottom: 20rpx;
  line-height: 1.4;
}
.business-page .content-scroll .business-grid-section .business-grid .business-card .card-content .card-features {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}
.business-page .content-scroll .business-grid-section .business-grid .business-card .card-content .card-features .feature-tag {
  background: rgba(59, 130, 246, 0.2);
  color: #3a8bcd;
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}
.business-page .content-scroll .business-grid-section .business-grid .business-card .card-arrow {
  color: #3a8bcd;
  font-size: 28rpx;
  font-weight: 600;
}
