/* 美化后的登录界面样式 */
.login-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  /* 使用更柔和的渐变背景 */
  background: linear-gradient(135deg, #ffffff, #f0f1f5);
  padding: 20px;
}
.login-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  padding: 40px 30px;
  border-radius: 16px;
  box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
  width: 90%;
  max-width: 350px;
}
.login-title {
  font-size: 28px;
  margin-bottom: 25px;
  font-weight: 700;
  color: #333;
}
.login-input {
  width: 85%;
  padding: 14px;
  border: 1px solid #e0e0e0;
  border-radius: 10px;
  margin-bottom: 22px;
  font-size: 16px;
  text-align: center;
  transition: border-color 0.3s ease, box-shadow 0.3s ease;
}
.login-input:focus {
  border-color: #3a8bcd;
  box-shadow: 0 0 8px rgba(58, 139, 205, 0.3);
  outline: none;
}
.login-button {
  width: 85%;
  padding: 14px;
  background-color: #3a8bcd;
  color: #fff;
  border: none;
  border-radius: 10px;
  font-size: 18px;
  font-weight: 700;
  transition: background-color 0.3s ease, transform 0.3s ease;
}
.login-button:hover {
  background-color: #3270a8;
  transform: translateY(-2px);
}

/* 美化后的主页面样式 */
.container {
  padding: 40rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}
.container .header {
  margin-bottom: 50rpx;
  text-align: center;
}
.container .header .title {
  font-size: 42rpx;
  font-weight: 700;
  color: #333;
}
.container .device-section {
  margin-bottom: 40rpx;
}
.container .device-section .device-input-group {
  display: flex;
  align-items: center;
  gap: 20rpx;
}
.container .device-section .device-input-group .device-input {
  flex: 1;
  height: 90rpx;
  padding: 0 25rpx;
  background-color: #f9f9f9;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 30rpx;
  transition: border-color 0.3s ease, background-color 0.3s ease;
}
.container .device-section .device-input-group .device-input:focus {
  border-color: #3a8bcd;
}
.container .device-section .device-input-group .scan-btn {
  width: 200rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  background-color: #3a8bcd;
  color: #fff;
  border: none;
  border-radius: 10rpx;
  transition: background-color 0.3s ease, transform 0.3s ease;
}
.container .device-section .device-input-group .scan-btn:hover {
  background-color: #3270a8;
  transform: translateY(-2px);
}
.container .process-section {
  margin-bottom: 40rpx;
}
.container .process-section .label {
  display: block;
  margin-bottom: 12rpx;
  color: #333;
  font-size: 32rpx;
}
.container .process-section .picker-text {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 25rpx;
  background-color: #f9f9f9;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 30rpx;
  transition: border-color 0.3s ease;
}
.container .process-section .picker-text:hover {
  border-color: #3a8bcd;
}
.container .form-section .form-item {
  margin-bottom: 30rpx;
}
.container .form-section .form-item .label {
  display: block;
  margin-bottom: 12rpx;
  color: #333;
  font-size: 32rpx;
}
.container .form-section .form-item .picker-text {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 25rpx;
  background-color: #f9f9f9;
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 30rpx;
  transition: border-color 0.3s ease;
}
.container .form-section .form-item .picker-text:hover {
  border-color: #3a8bcd;
}
.container .form-section .image-upload .preview-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 22rpx;
  border-radius: 12rpx;
  object-fit: cover;
}
.container .form-section .image-upload .upload-btn {
  width: 240rpx;
  font-size: 30rpx;
  background-color: #3a8bcd;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 12rpx;
  transition: background-color 0.3s ease, transform 0.3s ease;
}
.container .form-section .image-upload .upload-btn:hover {
  background-color: #3270a8;
  transform: translateY(-2px);
}
.container .form-section .submit-btn {
  margin-top: 40rpx;
  width: 100%;
  padding: 18rpx;
  background-color: #28a745;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 700;
  transition: background-color 0.3s ease, transform 0.3s ease;
}
.container .form-section .submit-btn:disabled {
  opacity: 0.6;
  background-color: #94d3a2;
}
.container .form-section .submit-btn:hover:not(:disabled) {
  background-color: #239b45;
  transform: translateY(-2px);
}
.container .export-section {
  margin-top: 40rpx;
  text-align: center;
}
.container .export-section button {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  margin-bottom: 20rpx;
  border: none;
  border-radius: 12rpx;
  transition: background-color 0.3s ease, transform 0.3s ease;
}
.container .export-section .export-btn {
  background-color: #3a8bcd;
  color: #fff;
}
.container .export-section .export-btn:hover {
  background-color: #3270a8;
  transform: translateY(-2px);
}
.container .export-section .cancel-export-btn {
  background-color: #e53e3e;
  color: #fff;
}
.container .export-section .cancel-export-btn:hover {
  background-color: #c53030;
  transform: translateY(-2px);
}
.container .export-section .admin-btn {
  background-color: #6c5ce7;
  color: #fff;
}
.container .export-section .admin-btn:hover {
  background-color: #5b4bc4;
}
.download-tip {
  padding: 20rpx;
  background-color: #fff3cd;
  border-radius: 8rpx;
  margin: 20rpx 0;
  color: #856404;
  font-size: 24rpx;
}